{
  "manifest_version": 3,
  "name": "Crypto Token Info Hover",
  "version": "1.0.1",
  "description": "Highlight Ethereum contract addresses and show token information on hover",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://api.coingecko.com/*",
    "https://api.etherscan.io/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/tooltip.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Crypto Token Info Hover"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["styles/tooltip.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 